<Window x:Class="VLSUP.Views.Windows.BindingEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLSUP.Views.Windows" ResizeMode="NoResize"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="BindingEmployeeWindow" Height="130" Width="400">
    <StackPanel>
        <ComboBox x:Name="employeeBox" Margin="10" SelectionChanged="employeeBox_SelectionChanged" DisplayMemberPath="FullName" HorizontalContentAlignment="Center" TextBlock.FontSize="18"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
            <Button x:Name="addButton" Content="Привязать к проекту" Click="addButton_Click" Template="{StaticResource MainButton}"/>
            <Button x:Name="removeButton" Visibility="Collapsed" Content="Отвязать от проекта" Margin="5 0 0 0" Template="{StaticResource MainButton}" TextBlock.Foreground="Red" Click="removeButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
